{
  "name": "2d-game-phaser",
  "version": "1.0.0",
  "description": "2D mini-game in Phaser",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "ts-node src/server.ts",
    "compile": "tsc -p .",
    "compile-watch": "npm run compile -- -w",
    "start-server": "node src/server.js",
    "dev": "concurrently --kill-others \"npm run compile-watch\" \"npm run start-server\" ",
    "prod-old": "ts-node --transpile-only src/server.ts"
  },
  "author": "William Pederzoli",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.5",
    "@types/socket.io": "^3.0.2",
    "concurrently": "^8.2.0",
    "phaser": "^3.60.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "human-readable-ids": "^1.0.4",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  }
}
